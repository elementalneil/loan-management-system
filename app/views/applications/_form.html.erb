<%= form_with(model: application) do |form| %>
  <% if application.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
        <% application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :name, class:"form-field", placeholder:"Enter your name" %>
  </div>

  <div>
    <%= form.number_field :age, class:"form-field", placeholder:"Enter your age"  %>
  </div>

  <div>
    <%= form.text_field :occupation, class:"form-field", placeholder:"What is your occupation?"  %>
  </div>

  <div>
    <%= form.text_field :phone_number, class:"form-field", placeholder:"Enter your phone number"  %>
  </div>

  <div>
    <%= form.number_field :amount, class:"form-field", placeholder:"Enter loan amount"  %>
  </div>

  <div>
    <%= form.text_field :purpose , class:"form-field", placeholder:"Enter purpose for loan" %>
  </div>

  <div>
    <%= form.number_field :duration, class:"form-field", placeholder:"Enter suggested repayment duration"  %>
  </div>

  <div>
    <%= form.hidden_field :bank, value:@bank %>
  </div>

  <div>

    <%= form.hidden_field :user_id, value: current_user.id %>
  <div>
    <%= form.submit %>
  </div>
<% end %>

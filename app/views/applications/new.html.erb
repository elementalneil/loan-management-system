<style>
  .form-header {
    margin-left: 17.5%;
  }

  .form-container {
    margin: 2.5%;
    box-sizing: border-box;
  }

  .form-container div{
    margin: 3%;
    margin-bottom: 0%;
    margin-top: 1%;
  }

  .form-container input {
    background-color: inherit;
    border: 0;
    border-bottom: 1px solid black;
    width: 25%;
    box-shadow:0 0 10px 0px rgba(0,0,0,0.06);
    padding: 1% 20% 1% 2.5%;
    margin-left: 25%;
  }

  .form-container input[type=submit] {
    background-color: #A33B20;
    color: #fff;
    padding: 1%;
    margin-top: 2%;
    margin-left: 41%;
    width: 15%;
  }
</style>

<h1 class = "form-header">New application</h1>
<h1 class = "form-header">
  <%=
    if @bank == "sbi"
      "State Bank of India"
    elsif @bank == "icici"
      "ICICI Bank"
    elsif @bank == "axis"
      "AXIS Bank"
    else
      "HDFC Bank"
    end
  %>
</h1>

<div class = "form-container">
  <%= render "form", application: @application %>
</div>